<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.a2_procesosenjava.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label fx:id="txtTitle" contentDisplay="CENTER" prefHeight="52.0" prefWidth="315.0" text="         A2_ProcesosEnJava" textAlignment="CENTER">
      <font>
         <Font name="Bell MT" size="24.0" />
      </font>
   </Label>
   <Label fx:id="txtComandos" prefHeight="31.0" prefWidth="423.0" text="3 comandos de Windows con redirección a ficheros">
      <font>
         <Font size="18.0" />
      </font>
   </Label>
   <ButtonBar buttonMinWidth="200.0" prefHeight="35.0" prefWidth="344.0">
     <buttons>
         <Button fx:id="btnCD" mnemonicParsing="false" onAction="#botonDRIVERQUERY" text="DRIVERQUERY" textAlignment="CENTER" />
         <Button fx:id="btnMKDIR" mnemonicParsing="false" onAction="#botonCHDIR" text="CHDIR" />
       <Button fx:id="btnRD" mnemonicParsing="false" onAction="#botonFSUTIL" text="FSUTIL" />
     </buttons>
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </ButtonBar>
   <Label fx:id="txtGrafica" prefHeight="31.0" prefWidth="178.0" text="1 aplicación gráfica">
      <font>
         <Font size="18.0" />
      </font>
   </Label>
   <Button fx:id="btnCalculadora" minWidth="200.0" mnemonicParsing="false" onAction="#botonCalculadora" prefHeight="25.0" prefWidth="106.0" text="CALCULADORA" />

    <Label fx:id="welcomeText" prefHeight="56.0" prefWidth="550.0" />
</VBox>
